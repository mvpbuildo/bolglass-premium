generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Ecommerce Models ---

model Message {
  id        String   @id @default(cuid())
  email     String
  name      String?
  content   String
  createdAt DateTime @default(now())
}

model Slot {
  id        String   @id @default(cuid())
  date      DateTime @unique
  capacity  Int      @default(10)
  bookings  Booking[]
  createdAt DateTime @default(now())
}

model Booking {
  id        String   @id @default(cuid())
  date      DateTime
  email     String
  name      String
  people    Int      @default(1)
  status    String   @default("CONFIRMED") // Auto-confirmed as per user request
  
  slotId    String?
  slot      Slot?    @relation(fields: [slotId], references: [id])
  
  createdAt DateTime @default(now())
}

model Order {
  id        String      @id @default(cuid())
  status    String      @default("PENDING") // PENDING, PAID, SHIPPED
  total     Float
  email     String
  items     OrderItem[]
  createdAt DateTime    @default(now())
}

model OrderItem {
  id            String  @id @default(cuid())
  orderId       String
  order         Order   @relation(fields: [orderId], references: [id])
  
  // For standard products
  productId     String?
  productName   String
  price         Float
  quantity      Int

  // For custom 3D config
  isCustom      Boolean @default(false)
  configuration String? // JSON string: { color: "#F00", text: "Ala" }
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
}
