{
    "$schema": "https://turbo.build/schema.json",
    "globalPassThroughEnv": [
        "DATABASE_URL"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "dist/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "generate": {
            "cache": false
        },
        "push": {
            "cache": false
        },
        "studio": {
            "cache": false,
            "persistent": true
        }
    }
}