{
  "name": "bolglass-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:generate": "turbo run generate --filter=@bolglass/database",
    "db:push": "turbo run push --filter=@bolglass/database",
    "db:studio": "turbo run studio --filter=@bolglass/database",
    "db:seed": "turbo run seed --filter=@bolglass/database"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}